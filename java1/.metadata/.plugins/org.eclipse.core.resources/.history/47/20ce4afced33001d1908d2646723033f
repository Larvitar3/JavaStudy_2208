package ch04;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

class MyFrame4 extends JFrame implements ActionListener{
	
	JButton button1;
	JButton button2;
	JButton button3;

	JPanel jPanelWrap;
	JPanel jPanel1;
	JPanel jPanel2;
	BorderLayout borderLayout;
	
	public MyFrame4() {
		
		initData();
		setInitLayout();
		addEventListener();
		
	}
	
	private void initData() {
		setTitle("EventListener 연습");
		setSize(500, 500);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		button1 = new JButton("button1");
		button2 = new JButton("button2");
		button3 = new JButton("button3");
		jPanelWrap = new JPanel();
		jPanel1 = new JPanel(); 
		jPanel2 = new JPanel(); 
		
		borderLayout = new BorderLayout();

	}
	
	private void setInitLayout() {
		setVisible(true);
		
		setLayout(borderLayout);
		
		add(jPanel1, borderLayout.CENTER);
		add(jPanel2, borderLayout.SOUTH);

		jPanel2.add(button1);
		jPanel2.add(button2);
		jPanel2.add(button3);


	}
	
	private void addEventListener() {
		button1.addActionListener(this);
		button2.addActionListener(this);
		button3.addActionListener(this);
	}
	
	

	
	@Override
	public void actionPerformed(ActionEvent e) {
		
		
		
		// 다운 캐스팅
		JButton tagetButton = (JButton)e.getSource();
		tagetButton.getText();
		
		if(tagetButton.getText().equals(button1.getText())) {
			System.out.println("버튼 1이 눌러졌습니다.");
			jPanel1.setBackground(Color.PINK);
		}else if(tagetButton.getText().equals(button2.getText())){
			System.out.println("버튼 2가 눌러졌습니다.");
			jPanel1.setBackground(Color.YELLOW);
		}else if(tagetButton.getText().equals(button3.getText())) {
			System.out.println("버튼 3가 눌러졌습니다.");
			jPanel1.setBackground(Color.ORANGE);
		}
		
	}
}

public class MyEventListener2 {
	public static void main(String[] args) {
		
		new MyFrame4();

		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
}
