<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/resultTextView"
        android:gravity="end"
        android:padding="14dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:background="#252525"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1E1E1E">

        <!--첫번째 열 start-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/one"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/four"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/seven"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="7"
                android:textSize="30dp"
                android:textColor="@color/white"/>

        </LinearLayout>
        <!--첫번째 열 end-->
        <!--두번째 열 start-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/two"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/five"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="5"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/eight"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="8"
                android:textSize="30dp"
                android:textColor="@color/white"/>

        </LinearLayout>
        <!--두번째 열 end-->
        <!--세번째 열 start-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/three"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="3"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/six"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="6"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/nine"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="9"
                android:textSize="30dp"
                android:textColor="@color/white"/>

        </LinearLayout>
        <!--세번째 열 end-->
        <!--네번째 열 start-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/ca"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="CA"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="#0E0E0E"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/plus"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="+"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="#131313"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/minus"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="-"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="#131313"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/zero"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="0"
                android:textSize="30dp"
                android:textColor="@color/white"/>

        </LinearLayout>
        <!--네번째 열 end-->



    </LinearLayout>



</LinearLayout>






















